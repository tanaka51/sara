= content_for :side do
  .side-content-header
    %h1.side-content-title
      = @wiki.name
      wiki

    .pure-g
      .pure-u-1-4
        = link_to '新規', new_wiki_page_path(@wiki), class: 'pure-button button-small'
      .pure-u-1-4
        = link_to '一覧', wiki_pages_path(@wiki), class: 'pure-button button-small'
      .pure-u-1-2
        = link_to 'サイドバーの編集', edit_wiki_sidebar_path(@wiki), class: 'pure-button button-small'

  .side-content-body
    ~ markdown(@wiki, @wiki.sidebar.content)
